<a id="active_filters"
   {% if swapoob is defined %}hx-swap-oob="morph"{% endif %}
   class="absolute z-10 block top-36 md:top-14 rounded-l border border-r-0 shadow-xl bg-white p-2 right-0"
   href="#filters">
    <div class="flex items-center gap-1">
        <svg xmlns="http://www.w3.org/2000/svg"
             fill="none"
             viewBox="0 0 24 24"
             stroke-width="1.5"
             stroke="currentColor"
             class="size-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z" />
        </svg>
        Other Filters >>
    </div>
    <div class="flex flex-wrap gap-1">
        {% for f in filters %}
            {% if filters[f]['meta']['field'] in params %}
                {% for v in params.getlist(filters[f]['meta']['field']) %}
                    <div class="rounded px-1 text-xs bg-slate-400">{{ v|e }}</div>
                {% endfor %}
            {% endif %}
        {% endfor %}
    </div>
</a>

<div id="results" class="space-y-2 grow overflow-auto">
    {% for release in releases %}
    {% include 'discover/release.jinja' %}
    {% endfor %}
</div>

{% include 'discover/pagination.jinja' %}
{% if htmx %}
{% include 'filters.jinja' %}
<a id="active_filters" hx-swap-oob="morph"
    class="absolute z-10 block top-24 rounded-l border border-r-0 shadow-lg bg-white p-2 right-0" href="#filters">
    Filters >>
    {% for f in filters %}
    {% if filters[f]['meta']['field'] in request.args %}
    {% for v in request.args.getlist(filters[f]['meta']['field']) %}
    <div class="w-full">{{v}}</div>
    {% endfor %}
    {% endif %}
    {% endfor %}
</a>

{% endif %}
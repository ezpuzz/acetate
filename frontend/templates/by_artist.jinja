{% extends "layout.jinja" %}
{% from "components/active-search.jinja" import activesearch as activesearch %}

{% block content %}
<div class="m-2 min-h-0 grow flex flex-col">
    <input type="search" name="search" placeholder="Search" class="text-2xl rounded-md border p-1 w-full" autofocus
        value="{{search|d('')}}" hx-push-url="true" hx-trigger="input changed delay:200ms, search"
        hx-sync="this:replace" hx-get="/by_artist" hx-target="#results" />
    <div class="flex gap-2 mt-2 min-h-0 grow">
        <div class="w-1/3 flex flex-col">
            <h1 class="text-xl">Artists</h1>
            {% include 'by_artist/results.jinja' %}
        </div>
        <div class="w-1/3 flex flex-col overflow-auto">
            <h1 class="text-xl">Selected Artist</h1>
            <div id="details" class="min-h-0 grow"></div>
        </div>
        <div class="w-1/3 flex flex-col overflow-auto">
            <h1 class="text-xl">Album</h1>
            <div id="release" class="min-h-0 grow"></div>
        </div>

    </div>
</div>
{% endblock%}
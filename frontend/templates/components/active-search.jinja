{% macro activesearch(target, name, label, value, placeholder)%}
<div class="flex flex-col items-stretch">
    <label class="text-xs text-slate-700" for="{{name}}">{{label}}</label>

    <input id="{{name}}" name="{{name}}" hx-trigger="input changed delay:400ms, search" hx-sync="this:replace"
        hx-get="{{target}}" hx-target="#results" hx-swap="morph" hx-include="#search, #filters, #pagination"
        type="search" value="{{value|d()}}" placeholder="{{placeholder}}"
        class="activesearch text-xs rounded-md border p-1 min-w-32 grow" />
</div>
{% endmacro %}
<div id="results" class="space-y-2">
    {% for artist in artists|d([]) %}
        <a id="artist{{ artist.id }}"
           href="#column-2"
           class="block hover:bg-slate-200 rounded p-2 cursor-pointer target:bg-slate-300"
           hx-get="/artist/{{ artist.id }}"
           hx-target="#details"
           hx-include="#artist{{ artist.id }}, #search">
            <input name="selected" value="{{ artist.id }}" type="hidden" />
            <div class="text-xl">{{ artist.name }}</div>
            <div class="line-clamp-2">{{ artist.profile|d() }}</div>
        </a>
    {% endfor %}
</div>
